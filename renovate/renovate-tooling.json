{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        ":gomod",
        "github>nicolasbender/github-config//renovate/renovate-default"
    ],
    "postUpdateOptions": [
      "gomodUpdateImportPaths",
      "gomodTidy"
    ],
    "packageRules": [
        {
            "matchManagers": [
                "gomod"
            ],
            "matchDepNames": [
                "go"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "enabled": true
        }
    ]
}